



<h2>Crie sua conta:</h2>
<div class="card">
    <div class="card-body">
        <form action="/usuarios/registro" method="POST">
            <label for="nome">Nome:</label>
                <input type="text" name="nome" class="form-control">
            <label for="email">Email:</label>
                <input type="email" name="email" class="form-control">
            <label for="senha">Senha:</label>
                <input type="password" name="senha" class="form-control">
            <label for="senha2">Repita sua senha:</label>
                <input type="password" name="senha2" class="form-control"><hr>
            <label for="checkBox">Conta Admin</label>
                <input type="checkbox" name="trueAdmin"><br>
                    {{#each erros}}
                        <div class="alert alert-danger mt-4">{{texto}}</div>
                    {{else}}

                    {{/each}}
            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>