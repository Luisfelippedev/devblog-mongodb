<h2>{{categoria.nome}}:</h2>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Ler mais</button></a>
        <hr>
        <small>Data de publicação: {{data}}</small>
    </div>
</div>

{{else}}
    <br>
    <h5>Nenhuma postagem registrada &#128531;</h5>
{{/each}}